.shopcart
  position fixed
  left 0px
  bottom 0px
  //要显示在最外层
  z-index 50
  width 100%
  height 48px
  .content
    display flex
    background #141d27
    //因为所有子元素的字体颜色都一样,所以将字体颜色设在父控件里
    color rgba(255, 255, 255, 0.4)
    .content-left
      flex 1
      font-size 0
    .logo-wrapper
      display inline-block
      position relative
      top -10px
      margin 0 12px
      padding 6px
      width 56px
      height 56px
      box-sizing border-box
      //vertical-align top
      //设置圆角
      border-radius 50%
      background #141d27
      text-align center
      .logo
        width 100%
        height 100%
        border-radius 50%
        background #2b343c
        background-image url('../../../resource/img/shopcart.png')
        background-size 90% 90%
        background-repeat no-repeat
        text-align center
        margin 0 auto
        &.heightlight
          background-image url('../../../resource/img/shopcar_hightlight.png')
      .num
        position absolute
        top 0px
        right 0px
        width 24px
        height 24px
        //实现垂直居中
        line-height 24px
        //实现水平居中
        text-align center
        border-radius 16px
        font-size 9px
        font-weight 700
        color #fff
        background rgb(240, 20, 20)
        box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.4)
    .price
      display inline-block
      vertical-align top
      //最顶部shopcart高度48px,设置line-height 24px和font-size 16px,price
      //中的文字top距离shopcart顶部4px,再设置margin-top 12px,最后price
      //中的文字top距离shopcart顶部16px(距离顶部16+font-size 16+距离底部16=48px),正好居中了
      margin-top 12px
      line-height 24px
      box-sizing border-box
      padding-right 12px
      border-right 1px solid rgba(255, 255, 255, 0.1)
      font-size 16px
      font-weight 700
      &.heightlight
        color #fff
    .desc
      display inline-block
      vertical-align top
      line-height 24px
      margin 12px 0 0 12px
      font-size 10px
    .content-right
      flex 0 0 105px
      width 105px
      .pay
        height 48px
        line-height 48px
        font-size 12px
        font-weight 700
        text-align center
        &.not-enough
          //还没达到起送费
          background #2b333b
        &.enough
          background #00b43c
          color #fff
